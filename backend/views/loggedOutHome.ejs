<!DOCTYPE html>
<html>
  <head>
    <%- include('partials/head') %>
  </head>

  <body>
    <div class="container_no_chat">
      
      <main class="main">
        <div class="centered-content">
          <h1 class="uno-title">UNO</h1>
          <ul class="nav-list">
            <li><a href="/login">login</a></li>
            <li><a href="/signup">signup</a></li>
            <li><a href="/rules#rules">Rules</a></li>
          </ul>
        </div>
        <div class="content-wrapper">
          <div class="stats-block">stats block</div>
          <div class="current-games">current games
            <div>
              <% openrooms.forEach(function(room) { %>
              <li>
                <%= room.name %> - <%= room.players.length %> players - Status: <%= room.status %>
              </li>
              <% }); %>
            </div>
          </div>
        </div>
      </main>

      <footer class="footer"><%- include('partials/footer') %></footer>
    </div>
    <script src="/scripts/uno.js"></script>
  </body>
</html>
