<!DOCTYPE html>
<html>

<head>
  <%- include('partials/head'); %>
</head>

<body>
  <div class="container">
    <%- include('partials/header'); %>

      <main class="main">
        <h1>Main Content </h1>
        <p>game room </p>
        <div id="cardarea"></div>
      </main>
      <aside class="sidebar">
        <h1>Room: <%= roomname %> </h1>
        <p>Host: <%= host %></p>
        <div>
          Players
          <% players.forEach(function(p) { %>
            <li>
                <%= p.name %>
            </li>
            <% }); 
          %>
        </div>
        <h2>Chat </h2>
        <form id="input-form">
          <label for="message">Message:</label><input id="message" type="text" name="message"><br><br>
          <input type="submit"
            value="Send">
          <div id="chatbox"></div>
        </form>
      </aside>
      <footer class="footer">
        <%- include('partials/footer'); %>
      </footer>
  </div>
  <script src="/scripts/uno.js">  </script>
</body>

</html>